<div class="col-md-4">

<%= form_for @category do |form|%>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :category_title, class:"form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, id: :category_description , class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.submit 'Submit', :class => 'btn btn-default' %>
  </div>
<% end %>
</div>